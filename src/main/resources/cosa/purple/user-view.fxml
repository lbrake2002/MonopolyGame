<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="336.0" prefWidth="419.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cosa.purple.UserView">
    <padding>
        <Insets bottom="45.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Player Login">
        <font>
            <Font name="System Bold Italic" size="35.0" />
        </font>
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </Label>
   <Label fx:id="lblNameError" />
   <Label fx:id="lblAgeError" />
    <HBox alignment="CENTER" prefHeight="20.0" prefWidth="293.0">
        <children>
            <Label fx:id="lblErrName" alignment="CENTER" text="Name:" textAlignment="CENTER">
                <font>
                    <Font size="19.0" />
                </font>
            </Label>
            <TextField fx:id="txtName">
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
            </TextField>
        </children>
        <padding>
            <Insets right="80.0" />
        </padding>
    </HBox>
    <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="200.0">
        <children>
            <Label fx:id="lblErrAge" text="Age:">
                <font>
                    <Font size="19.0" />
                </font>
                <padding>
                    <Insets left="15.0" />
                </padding>
            </Label>
            <TextField fx:id="txtAge">
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
            </TextField>
            <Label text="Must be 18 or older">
                <padding>
                    <Insets left="10.0" top="5.0" />
                </padding>
            </Label>
        </children>
        <padding>
            <Insets left="35.0" />
        </padding>
    </HBox>
    <Button fx:id="btnLogin" onAction="#onLoginClicked" text="Login">
        <VBox.margin>
            <Insets top="7.0" />
        </VBox.margin>
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</VBox>
